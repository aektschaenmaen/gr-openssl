<?xml version="1.0"?>
<block>
  <name>generate_key_from_password</name>
  <key>crypto_generate_key_pass</key>
  <category>crypto</category>
  <import>import crypto</import>
  <make>crypto.generate_key($keyfilename, $keylen, $pass)</make>

  <param>
    <name>Keyfile</name>
    <key>keyfilename</key>
    <type>string</type>
  </param>

  <param>
    <name>key length</name>
    <key>keylen</key>
    <type>int</type>
  </param>

  <param>
    <name>password</name>
    <key>pass</key>
    <type>string</type>
  </param>

</block>
