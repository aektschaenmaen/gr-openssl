<?xml version="1.0"?>
<block>
  <name>Symmetric Decryption</name>
  <key>crypto_sym_dec</key>
  <category>crypto</category>
  <import>import crypto</import>
  <make>crypto.sym_dec(self.$ciph_desc())</make>

  <param>
    <name>cipher description</name>
    <key>ciph_desc</key>
    <type>string</type>
  </param>

  <sink>
    <name>encrypted</name>
    <type>message</type>
    <optional>1</optional>
  </sink>

  <source>
    <name>decrypted</name>
    <type>message</type>
    <optional>1</optional>
  </source>
</block>
